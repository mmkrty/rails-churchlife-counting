  <%= simple_form_for @small_group, data: { controller: 'flatpickr' } do |f| %>
    <%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "date" }}, required: true %>
    <%= f.input :location, as: :select, collection: [['Friednau','Friednau'], ['Pans & Barths','Pans & Barths'], ['Tsays & Favors','Tsays & Favors'], ['Moralas & Fomins & Lins','Moralas & Fomins & Lins'], ['Wangs & Gebreselassies','Wangs & Gebreselassies'],['Xies & Brother & Sister house','Xies & Brother & Sister house'],['Farsi speaking','Farsi speaking'],['Russian speaking','Russian speaking']], required: true %>
    <%= f.input :adults %>
    <%= f.input :teenagers %>
    <%= f.input :children %>
    <%= f.input :toddlers %>
    <%= f.submit class: 'button button-primary' %>
  <% end %>
