<%= simple_form_for @prayer_meeting, data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "date" }} %>
  <%= f.input :location, as: :select, collection: [['meeting hall'], ['sounthwest'],['west'],['east']] %>
  <%= f.input :adults %>
  <%= f.input :teenagers %>
  <%= f.input :children %>
  <%= f.input :toddlers %>
  <%= f.submit class: 'button button-primary' %>
<% end %>
