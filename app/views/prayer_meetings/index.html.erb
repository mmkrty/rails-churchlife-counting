
<h2>Prayer Meetings</h2>
<table  class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Adults</th>
      <th>Teenagers</th>
      <th>Children</th>
      <th>Toddlers</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @prayer_meetings.each do |prayer_meeting| %>
      <tr>
        <td><%= prayer_meeting.date %></td>
        <td><%= prayer_meeting.adults%></td>
        <td><%= prayer_meeting.teenagers %></td>
        <td><%= prayer_meeting.children %></td>
        <td><%= prayer_meeting.toddlers %></td>
        <td><%= prayer_meeting.total %></td>
        <td>
        <%= link_to "Edit", edit_prayer_meeting_path(prayer_meeting), class: "text-warning" %>
        <%= link_to "Delete", prayer_meeting_path(prayer_meeting), class: "text-danger", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
    <!-- Add more rows as needed -->
  </tbody>
</table>
