  <%= simple_form_for @lords_day, data: { controller: 'flatpickr' } do |f| %>
    <%= f.input :date, as: :string, input_html: { data: { flatpickr_target: "date" }}, required: true %>
    <%= f.input :location, as: :select, collection: [['meeting hall']], required: true %>
    <%= f.input :adults %>
    <%= f.input :teenagers %>
    <%= f.input :children %>
    <%= f.input :toddlers %>
    <%= f.submit class: 'button button-primary' %>
  <% end %>
